<header role="banner">
	<h1 class="logo">
		{{#link-to "index"}}
			{{svg-jar "task-icon"}}
			<strong class="logo-text">Todo List</strong>
		{{/link-to}}
	</h1>
	{{task-search filter=filter onSearch=(action (mut filter))}}
	<nav class="user-nav">
		<ul class="nav-items" role="menubar">
			<li class="nav-item" role="menuitem">
				<button {{action "addTask"}}>{{svg-jar "add-solid"}}</button>
			</li>
			<li class="nav-item" role="menuitem">
				{{#link-to "notifications"}}{{svg-jar "notifications"}}{{/link-to}}
			</li>
			<li class="nav-item" role="menuitem">
				{{#link-to "settings"}}{{svg-jar "cog"}}{{/link-to}}
			</li>
		</ul>
	</nav>
</header>

{{partial "partials/_nav"}}

<main role="main">
	{{outlet}}
</main>